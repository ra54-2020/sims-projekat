<Window x:Class="Individualan_projekat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Individualan_projekat"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Height="30" Margin="10,35,0,30" HorizontalAlignment="Left" Width="65">Username</Label>
            <Label Grid.Row="1" Height="30" Margin="10,35,0,30" HorizontalAlignment="Left" Width="65">Password</Label>
                <TextBox Grid.Row="0" Height="20" Margin="80,35,45,32" Text="{Binding Path=Email}"/>
            
                <PasswordBox Grid.Row="1" Margin="80,38,45,32" x:Name="passwordBox" Height="20" Password=""/>
                
            <Button Grid.Row="2" Content=" Confirm " IsCancel="True" HorizontalAlignment="Center" Click="LogIn" Width="75" Margin="0,5,0,65"/>

        </Grid>
    </Grid>
</Window>
